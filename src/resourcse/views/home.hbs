
<div class="mt-4">
  
  <div class="row col-lg-8">
    {{#each product}}
    <div class="col-sm-4 col-lg-4">
      <div class="card mt-4" >
        <img class="card-img-top" style="height: 200px;" src="{{this.img}}" alt="">
        <div class="card-body" style="align-items: center;">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.price}}</p>
          <a href="/product/{{this._id}}/edit" class="mr-6 btn btn-primary">sua</a>
          <a href="/product/{{this._id}}/delete" class="btn btn-warning">xoa</a>
        </div>
      </div>

    </div>

    {{/each}}
  </div>
</div>



